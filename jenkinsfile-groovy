def groovy
pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.2.4', '1.3.0', '1.5.0'], description: 'vERSION TO DEPLOY')
        booleanParam(name: 'executeTest', defaultValue: true, description: 'Execute Tests')
    }
    stages {
        stage('init') {
            steps {
                script {
                    groovy = load 'script.groovy'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    groovy.buildApp()
                }
            }
        }


        stage('Test') {
            when {
                expression {
                    params.executeTest
                }
            
            }
            steps {
                script {
                    groovy.testApp()
                }
            }
        }

        stage('Deploy') {
            steps {

                script {
                    groovy.deployApp
                }
            }
        }

     

    }
}

